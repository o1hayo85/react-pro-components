{
  "name": "egenie-utils",
  "version": "0.0.0",
  "private": false,
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "commitizen": "^4.2.2",
    "conventional-changelog-cli": "^2.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "egenie-code-style": "0.0.12",
    "eslint": "7.23.0",
    "husky": "4.3.0",
    "jest": "26.6.3",
    "lerna": "^3.22.1",
    "lint-staged": "10.5.2",
    "prettier": "2.2.1",
    "stylelint": "13.12.0",
    "typescript": "4.2.4",
    "validate-commit-msg": "^2.14.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run changelog && git add . && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS && validate-commit-msg"
    }
  },
  "lint-staged": {
    "**/*.less": [
      "npm run lint:style-less",
      "git add ."
    ],
    "**/*.scss": [
      "npm run lint:style-scss",
      "git add ."
    ],
    "**/*.{js,jsx,ts,tsx}": [
      "npm run lint:js",
      "git add ."
    ],
    "**/*.{css,less,scss,md,html,json}": [
      "prettier --write",
      "git add ."
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "commit": "cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "bootstrap": "lerna bootstrap",
    "publish": "lerna publish",
    "lint-staged": "lint-staged --allow-empty",
    "lint:style-less": "stylelint --fix \"**/*.less\" --syntax less",
    "lint:style-scss": "stylelint --fix \"**/*.scss\" --syntax scss",
    "lint:js": "eslint --fix --quiet --ext .js,.jsx,.ts,.tsx .",
    "prettier": "prettier -c --write \"**/*.{css,less,scss,md,html,json}\""
  }
}
