{
  "name": "egenie-utils",
  "version": "0.0.0",
  "private": false,
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "commitizen": "^4.2.2",
    "conventional-changelog-cli": "^2.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "4.3.0",
    "lerna": "^3.22.1",
    "lint-staged": "10.5.2",
    "prettier": "2.2.1",
    "validate-commit-msg": "^2.14.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run changelog && git add . && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS && validate-commit-msg"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,css,less,scss,md,html,json}": [
      "prettier --write",
      "git add ."
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "commit": "cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "bootstrap": "lerna bootstrap",
    "publish": "lerna publish",
    "lint-staged": "lint-staged --allow-empty",
    "prettier": "prettier -c --write \"**/*.{js,jsx,ts,tsx,css,less,scss,md,html,json}\""
  }
}
